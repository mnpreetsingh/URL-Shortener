<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>

    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
    </style>
</head>

<body>
    <h1>Welcome to URL Shortener</h1>
    <% if (locals.id) { %>
        <p>URL GENERATED:http://localhost:8002/url/
            <%= id %>
        </p>
        <% } %>
            <div>
                <form method="POST" action="/url">
                    <label for>Enter your Original Url</label>
                    <input type="text" name="url" placeholder="http://example.com">
                    <button type="submit">Generate</button>
                </form>
            </div>
            <br>
            <div>
                <% if (locals.showTable) { %>
                    <% if (locals.specificUrl) { %>
                        <h2>Analytics for ShortID:
                            <%= specificUrl.shortId %>
                        </h2>
                        <table>
                            <thead>
                                <tr>
                                    <th>S.no</th>
                                    <th>ShortID</th>
                                    <th>Redirect</th>
                                    <th>Clicks</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% urls.forEach((url, index) => { %>
                                    <tr>
                                        <td>
                                            <%= index + 1 %>
                                        </td>
                                        <td>
                                            <%= specificUrl.shortId %>
                                        </td>
                                        <td>
                                            <%= specificUrl.redirectURL %>
                                        </td>
                                        <td>
                                            <%= specificUrl.visitHistory.length %>
                                        </td>
                                    </tr>
                                    <% }) %>
                            </tbody>
                        </table>
                        <% } else { %>
                            <table>
                                <thead>
                                    <tr>
                                        <th>S.no</th>
                                        <th>ShortID</th>
                                        <th>Redirect</th>
                                        <th>Clicks</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% urls.forEach((url, index) => { %>
                                        <tr>
                                            <td>
                                                <%= index + 1 %>
                                            </td>
                                            <td>
                                                <%= url.shortId %>
                                            </td>
                                            <td>
                                                <%= url.redirectURL %>
                                            </td>
                                            <td>
                                                <%= url.visitHistory.length %>
                                            </td>
                                        </tr>
                                        <% }) %>
                                </tbody>
                            </table>
                            <% } %>
                                <% } %>
            </div>
</body>

</html>